<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.ActivityDetailsShow"
    android:background="@color/black">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_details_show"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_details_show_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/marvel_logo"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/iv_details_show_hero_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:foreground="@drawable/gradient"
        android:foregroundGravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/tb_details_show"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tv_details_show_hero_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_details_show_hero_photo"
        android:text="@string/super_hero_name"
        android:fontFamily="@font/robotobold"
        android:textSize="28sp"
        android:textColor="@color/halfwhite"/>

    <TextView
        android:id="@+id/tv_details_show_hero_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/super_hero_description"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/halfwhite"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_details_show_hero_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>